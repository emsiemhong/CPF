                            </div>
                          </div>
                          <div class="item">
                            <img src="../../bundles/ngshome/images/slide3.png" alt="Flower" style="width: 100%" height="345">
                            <div class="carousel-caption">
                              <h3>Flowers</h3>
                              <p>Beatiful flowers in Kolymbari, Crete.</p>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>
                <div id="top-area" class="clearfix">
                    <div class="row">
                        <div class="col-sm-8">
                            <h3>{{ 'events'|trans }}</h3>
                            <ul>
                                {% if events %}
                                    {% for event in events %}
                                        <li>
                                            <span>{{ event.getDate.format('d/M/Y') }}</span>
                                            <a
                                                href="{{ path('ngs_event', {id: event.id}) }}"
                                            >
                                                {{ event.getTitle }}
                                            </a>
                                        </li>
                                    {% endfor %}
                                {% endif %}
                            </ul>
                        </div>
                        <div class="col-sm-4">
                            <h3>{{ 'services'|trans }}</h3>
                            <ul>
                                {% if services %}
                                    {% for service in services %}
                                        <li>
                                            <a
                                                href="{{ path('ngs_service', {id: service.id}) }}"
                                            >
                                                {{ service.getTitle }}
                                            </a>
                                        </li>
                                    {% endfor %}
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            {% endblock %}
