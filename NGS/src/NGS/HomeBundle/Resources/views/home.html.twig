{% extends 'base.html.twig' %}

{% block common_stylesheets %}
    {% stylesheets
        '@common_css'
        filter='cssrewrite'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />

    {% endstylesheets %}
{% endblock %}
{% block stylesheets %}

    {% stylesheets
        '@NGSHomeBundle/Resources/public/css/home.css'
        filter='cssrewrite'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />

    {% endstylesheets %}

    {# {% block admin_stylesheets %}{% endblock %} #}
    {# {% block login_stylesheets %}{% endblock %} #}

{% endblock %}

{% block javascripts %}
    {% javascripts
        '@jquery_js'
        '@bootstrap_js'
        '@NGSHomeBundle/Resources/public/js/common.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    <div id="header_wrapper">
        <header id="header" role="banner">
            <div id="logo">
                <a title="Home" href="#">
                    {# <img logo.png"> #}
                    {% image '@NGSHomeBundle/Resources/public/images/logo.png' %}
                        <img src="{{ asset_url }}" alt="Example" />
                    {% endimage %}
                </a>
            </div>
            <h1 id="site-title">
                <a title="Home" href="index.html"></a>
                <div id="site-description"></div>
            </h1>
            <div class="row top-right">
                <div class="col-sm-3 social-media">
                    <img src="../../bundles/ngshome/images/twitter.png" alt="twitter" title="twitter" />
                    <img src="../../bundles/ngshome/images/facebook.png" alt="facebook" title="facebook" />
                </div>
                <div class="col-sm-3 language-switcher"><a href="">English</a> | <a href="">ខ្មែរ</a></div>
                <div class="col-sm-6 logging">
                    <div>
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                            <a href="{{ path('fos_user_security_logout') }}">
                                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                            </a>
                        {% else %}
                            <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                        {% endif %}
                    </div>

                    {% if app.request.hasPreviousSession %}
                        {% for type, messages in app.session.flashbag.all() %}
                            {% for message in messages %}
                                <div class="flash-{{ type }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            <div class="clear"></div>
        </header>
    </div>
    <div class="menu_wrapper">
        <nav id="main-menu" role="navigation">
            <a class="nav-toggle" href="#">Navigation</a>
            <div class="menu-navigation-container">
                <ul class="menu">
                    <li class="first leaf">
                        <a href="" class="active">Home</a>
                    </li>
                    <li class="leaf">
                        <a href="">About</a>
                    </li>
                    <li class="expanded">
                        <a href="">Service</a>
                        <ul class="menu" style="display: none;">
                            <li class="first leaf">
                                <a href="node/3.html">Left side bar</a>
                            </li>
                            <li class="leaf">
                                <a href="right-side-bar.html">Right side bar</a>
                            </li>
                            <li class="leaf">
                                <a href="left-and-right.html">Left and right sidebar</a>
                            </li>
                            <li class="last leaf">
                                <a href="full-width.html">Full width</a>
                            </li>
                        </ul>
                    </li>
                    <li class="leaf">
                        <a href="" class="expanded">E-Library</a>
                    </li>
                    <li class="last leaf">
                        <a href="">Contact</a>
                    </li>
                </ul>
            </div>
            <div class="clear"></div>
        </nav>
    </div>
    <div id="container">
        {# <div id="sidebar-left">
        </div> #}
        <div id="content">
            {% block content %}
                <div class="region region-slideshow">
                    <div id="myCarousel" class="carousel slide slider-wrapper" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                          <li data-target="#myCarousel" data-slide-to="1"></li>
                          <li data-target="#myCarousel" data-slide-to="2"></li>
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" id="slider" role="listbox">

                          <div class="item active">
                            <img src="../../bundles/ngshome/images/slide1.png" alt="Chania" style="width: 100%" height="345">
                            <div class="carousel-caption">
                              <h3>Chania</h3>
                              <p>The atmosphere in Chania has a touch of Florence and Venice.</p>
                            </div>
                          </div>

                          <div class="item">
                            <img src="../../bundles/ngshome/images/slide2.png" alt="Chania" style="width: 100%" height="345">
                            <div class="carousel-caption">
                              <h3>Chania</h3>
