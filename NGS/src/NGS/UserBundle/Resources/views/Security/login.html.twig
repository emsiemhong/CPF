{% extends "NGSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<p class="login-msg-box">Login Form</p>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

<form id="form-login" action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <input
        type="text"
        id="username"
        class="f-control"
        placeholder="Username"
        name="_username"
        value="{{ last_username }}"
        required="required"
    />
    <input
        type="password"
        id="password"
        class="f-control"
        placeholder="Password"
        name="_password"
        required="required"
    />
    
    <div class="remember-me">
        <input
            type="checkbox"
            id="remember_me"
            name="_remember_me"
            value="on"
        />
        <label for="remember_me">
            {{ 'security.login.remember_me'|trans }}
        </label>
    </div>
    <input type="hidden" name="_target_path" value="sonata_admin_dashboard" />
    <div class="wrap-btn">
        <input
            type="submit"
            id="_submit"
            class="btn"
            name="_submit"
            value="{{ 'security.login.submit'|trans }}"
        />
    </div>
</form>
{% endblock fos_user_content %}
