{% extends "NGSHomeBundle::home.html.twig" %}

{% block content %}
    {% for event in events %}
        <div class="row">
            <div class="art-title">
                <h3>{{ event.getTitle }}</h3>
                <span class="event-date">{{ event.getDate.format('d/M/Y') }}</span>
            </div>
            {% if event.getPicturePath is not null %}
                <img
                    src="/uploads/events/{{ event.getPicturePath }}"
                    alt="Picture"
                    class="img-medium text-wrap"
                    align="top"
                >
            {% endif %}
            <p class="show-more-front">{{ event.getDescription|striptags }}</p>
        </div>
    {% endfor %}
{% endblock %}