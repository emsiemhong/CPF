{% extends "NGSHomeBundle::home.html.twig" %}

{% block content %}
    {% for event in events %}
        <div class="row">
            <div class="event-title">
                <h3>{{ event.getTitle }}</h3>
                <span class="event-date">{{ event.getDate.format('d/M/Y') }}</span>
            </div>
            <p>{{ event.getDescription|striptags }}</p>
        </div>
    {% endfor %}
{% endblock %}