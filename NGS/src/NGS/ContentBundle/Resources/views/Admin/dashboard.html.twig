{% extends 'NGSHomeBundle::home.html.twig' %}

{% block stylesheets %}

    {% stylesheets
        '@NGSContentBundle/Resources/public/css/dashboard.css'
        filter='cssrewrite'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

{% endblock %}

{% block body %}
    <header id="admin-header">
        <div class="admin-logo"><a href="{{ path('ngs_home_homepage') }}">E-Construction</a></div>
        <div class="admin-logging">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            {% endif %}
        </div>
    </header>
    <div id="admin-container row">
        <aside class="main-sidebar col-lg-3">
            <ul id="nav">
                <li class=""><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                <li class="row">
                    <a class="col-sm-9 selected" href="{{ path('admin_article') }}">{{ 'article'|trans }}</a>
                    <a class="col-sm-3" href="{{ path('admin_article_new') }}">{{ 'new'|trans }}</a>
                </li>
                <li class="row">
                    <a class="col-sm-9" href="{{ path('admin_announcement') }}">{{ 'announcement'|trans }}</a>
                    <a class="col-sm-3" href="{{ path('admin_announcement_new') }}">{{ 'new'|trans }}</a>
                </li>
                <li class="row">
                    <a class="col-sm-9" href="{{ path('admin_event') }}">{{ 'event'|trans }}</a>
                    <a class="col-sm-3" href="{{ path('admin_event_new') }}">{{ 'new'|trans }}</a>
                </li>
                <li class="row">
                    <a class="col-sm-9" href="{{ path('admin_library') }}">{{ 'Library'|trans }}</a>
                    <a class="col-sm-3" href="{{ path('admin_library_new') }}">{{ 'new'|trans }}</a>
                </li>
                <li class="row">
                    <a class="col-sm-9" href="{{ path('admin_contactbook') }}">{{ 'contactbook'|trans }}</a>
                    <a class="col-sm-3" href="{{ path('admin_contactbook_new') }}">{{ 'new'|trans }}</a>
                </li>
                <li class="row">
                    <a class="col-sm-9" href="{{ path('admin_contactbook_section') }}">{{ 'contactbook_section'|trans }}</a>
                    <a class="col-sm-3" href="{{ path('admin_contactbook_section_new') }}">{{ 'new'|trans }}</a>
                </li>
            </ul>
        </aside>
        <div class="admin-content col-lg-9">
            {% block admin_content %}
            {% endblock %}
        </div>
    </div>

{% endblock %}